<script src="js/countUp.min.js"></script>
<script src="js/typed.min.js"></script>

<script>
    /*********************** Start Script Of Home Page ***********************/
    //Start Typed in Welcome Home Page
    var typed = new Typed(".wel-come .wel .typed", {
        strings: ["هنئ اصدقائك على المناسبات السعيدة", "كن انت اول من يبادر بالارسال ليكتشف مدى حبك له", "شارك افراحك تخرجك عيد ميلادك وكل ما يسعدك ويسعد اصدقائك"],
        typeSpeed: 50,
        loop: true,
        startDelay: 500,
        backDelay: 500,
        showCursor: false
    });
    //End Typed in Welcome Home Page
    /*********************** End Script Of Home Page ***********************/

    /*********************** Start Script Of Counter Page ***********************/
    var count,
        check = true;
    $(window).on("scroll", function () {
        var scrollTop = $(window).scrollTop(),
        elementOffset = $('.counter').offset().top,
        distance = (elementOffset - scrollTop);

        if ((distance < 510 && distance > 470)) { check = 1; }
        else { check = 0; }

        if (check) {
            $('.counter .count-1 h4').attr('id', 'counter-1');
            count = new CountUp('counter-1', 0, 3201, 0, 9);
            count.start();

            $('.counter .count-2 h4').attr('id', 'counter-2');
            count = new CountUp('counter-2', 0, 6325, 0, 5);
            count.start();

            $('.counter .count-3 h4').attr('id', 'counter-3');
            count = new CountUp('counter-3', 0, 965, 0, 12);
            count.start();
        }
    });

    /*********************** End Script Of Counter Page ***********************/

    var socket = io();
        socket.emit('connection');

</script>


