                <a href="AllMyPage?id=<%=sess%>">
                    <div class="col-sm-6">
                        <button type="submit" class="btn-danger btn input-lg btn-block">الصفحة الشخصية</button>
                    </div>
                </a>
                <a href="LogOut">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-danger input-lg btn-block">تسجيل الخروج</button>
                    </div>
                </a>
            </div>
            <%}%>
        </div>
    </div>

</section>

<section class="counter">
    <!-- @*<div class="dark-bg"></div>*@ -->
