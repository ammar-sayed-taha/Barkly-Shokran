<%include shared/_Layout.ejs%>

<section class="slide-show">
    <div id="slideID" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#slideID" data-slide-to="0" class="active"></li>
            <li data-target="#slideID" data-slide-to="1"></li>
            <li data-target="#slideID" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="img/slide_show/slide_1.jpg" draggable="false">
                <div class="carousel-caption">
                    <h3>تخرجك بالتاكيد سيسعد اصدقائك</h3>
                </div>
            </div>
            <div class="item">
                <img src="img/slide_show/slide_2.jpg" draggable="false" />
                <div class="carousel-caption">
                    <h3>دعنا نكون وسيلة فى دعوة اصدقائك فى هذه الليلة</h3>
                </div>
            </div>
            <div class="item">
                <img src="img/slide_show/slide_3.jpg" draggable="false" />
                <div class="carousel-caption">
                    <h3>شارك اصدقائك وعائلتك كل لحظاتك السعيدك بحياتك</h3>
                </div>
            </div>

        </div>

        <a class="left carousel-control" href="#slideID" role="button" data-slide="prev">
            <span class="fa fa-chevron-left" aria-hidden="true"></span>
        </a>
        <a class="right carousel-control" href="#slideID" role="button" data-slide="next">
            <span class="fa fa-chevron-right" aria-hidden="true"></span>
        </a>
    </div>
</section>


<section class="wel-come">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="wel">
                    <h1>مرحبا بكم فى باركلى <span> شكرا</span></h1>
                    <span class="typed"></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="log-regist">
    <div class="dark-bg"></div>
    <div class="container">
        <div class="row">
            <h2>شارك معنا فرحتك</h2>
            <!-- *********** if there is session no then show this section ******** -->
            <% if(sess == 0){ %>
                <div class="col-xs-12">
                
                    <form action="Register" method="get">
                        <div class="col-sm-6">
                            <button type="submit" class="btn-danger btn input-lg btn-block">سجل الأن</button>
                        </div>
                    </form>
                    <form action="Login" method="get">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-danger input-lg btn-block">تسجيل الدخول</button>
                        </div>
                    </form>>
                </div>
            <%}else{%>
                <!-- *********** if there is session then show this section ******** -->
