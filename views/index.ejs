        <div class="row">
            <div class="col-sm-4">
                <div class="count-1 wow fadeInDown" data-wow-delay=".3s" data-wow-offset="20">
                    <i class="fa fa-users"></i>
                    <h4></h4>
                    <label>زائر</label>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="count-2 wow fadeInDown" data-wow-delay=".5s">
                    <i class="fa fa-comments"></i>
                    <h4></h4>
                    <label>رسالة</label>
                </div>
            </div>

            <div class="col-sm-4">
                <div class="count-3 wow fadeInDown" data-wow-delay="1s">
                    <i class="fa fa-desktop"></i>
                    <h4></h4>
                    <label>حساب</label>
                </div>
            </div>
        </div>
    </div>
</section>


